<%= simple_form_for(@tweet) do |t| %>
<%= t.error_notification %>
<div class="field">
    <div class="control">
        <%= t.input :tweet, label: "What's Happening?", input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label"}, placeholder: "What's Happening?"%>
    </div>
</div>

<%= t.button :submit, class: "button is-info"%>
<% end %>